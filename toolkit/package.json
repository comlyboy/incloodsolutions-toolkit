{
	"name": "@incloodsolutions/toolkit",
	"version": "0.0.32",
	"description": "A lightweight, framework-agnostic toolkit providing common utilities, helpers, and abstractions for building scalable JavaScript and TypeScript applications.",
	"main": "dist/index.js",
	"author": "Inclood Solutions",
	"private": false,
	"license": "MIT",
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"toolkit",
		"utilities",
		"javascript",
		"typescript",
		"helpers",
		"library",
		"functions",
		"open-source",
		"shared",
		"incloodsolutions"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsup",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "npm run build && npm pack",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest"
	},
	"dependencies": {
		"axios": "^1.12.2",
		"bwip-js": "^4.7.0",
		"countries-and-timezones": "^3.8.0",
		"handlebars": "^4.7.8",
		"libphonenumber-js": "^1.12.24",
		"lodash": "^4.17.21",
		"qr-code-styling": "^1.9.2",
		"tslib": "^2.8.1",
		"uuid": "^13.0.0",
		"validator": "^13.15.15",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@esbuild-plugins/tsconfig-paths": "^0.1.2",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.9.1",
		"@types/qrcode": "^1.5.6",
		"@types/validator": "^13.15.3",
		"@types/xml2js": "^0.4.14",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"esbuild": "^0.25.11",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/"
		]
	}
}
