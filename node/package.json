{
	"name": "@incloodsolutions/node-toolkit",
	"version": "0.0.2",
	"description": "A toolkit containing utility, helper, config, interfaces for nodejs apps",
	"main": "dist/index.js",
	"author": "Inclood Solutions",
	"private": false,
	"license": "MIT",
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"node",
		"nodejs",
		"utilities",
		"toolkit",
		"javascript",
		"typescript",
		"backend",
		"helpers",
		"library",
		"incloodsolutions"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsup",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "npm run build && npm pack",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.896.0",
		"@aws-sdk/client-s3": "^3.896.0",
		"@aws-sdk/client-ses": "^3.896.0",
		"@aws-sdk/client-sns": "^3.896.0",
		"@aws-sdk/lib-dynamodb": "^3.896.0",
		"@aws-sdk/s3-request-presigner": "^3.896.0",
		"@codegenie/serverless-express": "^4.17.0",
		"@incloodsolutions/toolkit": "^0.0.31",
		"aws-cdk-lib": "^2.217.0",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"constructs": "^10.4.2",
		"countries-and-timezones": "^3.8.0",
		"crypto-js": "^4.2.0",
		"express": "^5.1.0",
		"handlebars": "^4.7.8",
		"mongoose": "^8.18.2",
		"morgan": "^1.10.1",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@esbuild-plugins/tsconfig-paths": "^0.1.2",
		"@types/aws-lambda": "^8.10.152",
		"@types/bcryptjs": "^3.0.0",
		"@types/crypto-js": "^4.2.2",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.5.2",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"esbuild": "^0.25.10",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.1.3",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.4.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/"
		]
	}
}
