{
	"name": "@incloodsolutions/react-toolkit",
	"version": "0.0.2",
	"description": "A collection of reusable React utilities, hooks, and components designed to accelerate development and improve code consistency across React applications.",
	"main": "dist/index.js",
	"author": "Inclood Solutions",
	"license": "MIT",
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"components",
		"react",
		"react-hooks",
		"react-components",
		"react-toolkit",
		"ui",
		"frontend",
		"library",
		"typescript",
		"javascript",
		"utilities",
		"incloodsolutions"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsup",
		"buildd": "npm run prebuild && npx vite build",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "npm run build && npm pack",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest"
	},
	"dependencies": {
		"@incloodsolutions/toolkit": "^0.0.31",
		"clsx": "^2.1.1",
		"react-router-dom": "^7.8.1",
		"react-use": "^17.6.0",
		"tailwind-merge": "^3.3.1",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.1",
		"glob": "^11.0.3",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.3",
		"vite-plugin-dts": "^4.5.4",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	}
}
