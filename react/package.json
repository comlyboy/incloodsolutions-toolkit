{
	"name": "@incloodsolutions/react-toolkit",
	"version": "0.0.1",
	"description": "A toolkit containing utility, helpers, configs, hooks, interfaces for React/Nextjs apps",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc -b",
		"build:tsup": "npm run prebuild && tsup",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "npm run build:tsup && npm pack",
		"publishing": "npm run build && npm publish --access=public",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest"
	},
	"keywords": [
		"react",
		"ui",
		"components",
		"typescript"
	],
	"author": "Inclood Solutions",
	"license": "MIT",
	"dependencies": {
		"clsx": "^2.1.1",
		"react-router-dom": "^7.8.0",
		"react-use": "^17.6.0",
		"tailwind-merge": "^3.3.1",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	}
}
