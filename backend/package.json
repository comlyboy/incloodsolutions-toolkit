{
	"name": "@incloodsolutions/toolkit",
	"version": "0.0.28",
	"description": "A toolkit containing utility, helper, config, interfaces for nodejs apps",
	"main": "dist/index.js",
	"author": "",
	"private": false,
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc -b",
		"build:esbuild": "rimraf dist && ts-node build.ts",
		"build:tsup": "tsup && tsc --emitDeclarationOnly",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "npm run build && npm pack",
		"publishing": "npm run build:tsup && npm publish --access=public",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest"
	},
	"license": "MIT",
	"dependencies": {
		"@aws-lambda-powertools/logger": "^2.24.1",
		"@aws-sdk/client-dynamodb": "^3.864.0",
		"@aws-sdk/client-s3": "^3.864.0",
		"@aws-sdk/client-ses": "^3.864.0",
		"@aws-sdk/client-sns": "^3.864.0",
		"@aws-sdk/lib-dynamodb": "^3.864.0",
		"@aws-sdk/s3-request-presigner": "^3.864.0",
		"@codegenie/serverless-express": "^4.17.0",
		"aws-cdk-lib": "^2.210.0",
		"axios": "^1.11.0",
		"base64-stream": "^1.0.0",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"constructs": "^10.4.2",
		"countries-and-timezones": "^3.8.0",
		"crypto-js": "^4.2.0",
		"express": "^5.1.0",
		"handlebars": "^4.7.8",
		"libphonenumber-js": "^1.12.10",
		"lodash": "^4.17.21",
		"mongoose": "^8.17.1",
		"morgan": "^1.10.1",
		"qr-code-styling": "^1.9.2",
		"qrcode": "^1.5.4",
		"tslib": "^2.8.1",
		"uuid": "^11.1.0",
		"validator": "^13.15.15",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@esbuild-plugins/tsconfig-paths": "^0.1.2",
		"@types/aws-lambda": "^8.10.152",
		"@types/bcryptjs": "^3.0.0",
		"@types/crypto-js": "^4.2.2",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.2.1",
		"@types/qrcode": "^1.5.5",
		"@types/uuid": "^10.0.0",
		"@types/validator": "^13.15.2",
		"@types/xml2js": "^0.4.14",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"esbuild": "^0.25.8",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.0.5",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@workinance/nestjs-common(|/.*)$": "<rootDir>/libs/nestjs-common/src/$1"
		}
	}
}
